{
	// make sure the settings below is not present in either user and
	// workspace settings so adding ids to messages on save works
	// "eslint.codeActionsOnSave.rules": [],
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"typescript.tsdk": "node_modules/typescript/lib",
	"eslint.run": "onSave",
	"editor.codeActionsOnSave": {
		"source.fixAll": "always"
	},
	"tailwindCSS.classAttributes": ["className", "clsx"],
	"css.validate": true,
	"editor.quickSuggestions": {
		"strings": true
	},
	"files.associations": {
		"*.css": "tailwindcss"
	},
	"workbench.colorCustomizations": {
		"activityBar.activeBackground": "#f8f4ef",
		"activityBar.background": "#f8f4ef",
		"activityBar.foreground": "#15202b",
		"activityBar.inactiveForeground": "#15202b99",
		"activityBarBadge.background": "#64bb94",
		"activityBarBadge.foreground": "#15202b",
		"commandCenter.border": "#15202b99",
		"sash.hoverBorder": "#f8f4ef",
		"statusBar.background": "#e8dbcc",
		"statusBar.foreground": "#15202b",
		"statusBarItem.hoverBackground": "#d8c2a9",
		"statusBarItem.remoteBackground": "#e8dbcc",
		"statusBarItem.remoteForeground": "#15202b",
		"titleBar.activeBackground": "#e8dbcc",
		"titleBar.activeForeground": "#15202b",
		"titleBar.inactiveBackground": "#e8dbcc99",
		"titleBar.inactiveForeground": "#15202b99"
	},
	"peacock.color": "#E8DBCC",
	"[typescript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	}
}
